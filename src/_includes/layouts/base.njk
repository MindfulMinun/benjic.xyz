<html lang="{{ lang }}">
    <head>
        <meta charset="utf-8">
        {% if title -%}
        <title>{{ title }} â€¢ Benji</title>
        {% else %}
        <title>Benji</title>
        {%- endif -%}
        
        <meta name="viewport" content="width=device-width,initial-scale=1.0">
        <link rel="icon" href="/static/images/pfp-2020@1x.png">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="theme-color" content="{{ accent }}">

        <!-- IndieWeb -->
        <link rel="me" href="mailto:benji@benjic.xyz">
        <link rel="pgpkey" href="https://keybase.io/mindfulminun/pgp_keys.asc">

        {% if not eleventyExcludeFromCollections -%}
        <!-- OpenGraph -->
        {% if title -%}
        <meta property="og:title"              content="{{ title }}">
        <meta property="og:url"                content="{{ page.url | addOrigin }}">
        {%- endif %}
        {% if desc -%}
        <meta name="description"               content="{{ desc }}">
        <meta property="og:description"        content="{{ desc }}">
        {%- endif %}
        <meta property="twitter:card"          content="summary">
        {% if image -%}
        <!-- Image -->
        <meta property="og:image"              content="{{ image.src | addOrigin }}">
        <meta property="og:image:alt"          content="{{ image.alt }}">
        <meta property="twitter:image"         content="{{ image.src | addOrigin }}">
        <meta property="twitter:image:alt"     content="{{ image.alt }}">
        <meta property="twitter:card"          content="summary_large_image">
        {%- endif %}
        <meta property="og:type"               content="website">
        <meta property="twitter:site"          content="{{ b.twitter.handle }}">
        <meta property="twitter:creator"       content="{{ b.twitter.handle }}">
        <meta property="twitter:widgets:theme" content="dark">
        <meta property="twitter:widgets:link-color"   content="{{ accent }}">
        <meta property="twitter:widgets:border-color" content="{{ accent }}">
        {% else %}
        <meta name="robots" content="noindex">
        {%- endif %}

        <!-- Styles -->
        <link rel="stylesheet" href="/static/styles/normalize.css">
        <link rel="stylesheet" href="https://rsms.me/inter/inter.css">
        <link rel="stylesheet" href="/static/styles/base.css">
        <script src="/static/scripts/main.js" type="module"></script>
        {% if styles -%}
        <style>{{ styles | safe }}</style>
        {%- endif %}
        {%- if after_head %}{{ after_head | safe }}{% endif -%}
    </head>
